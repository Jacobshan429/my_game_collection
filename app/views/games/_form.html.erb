<% if @game.errors.any? %>
  <ul>
    <% @game.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @game do |f| %>
<div class="form-group">
  <%= f.label :name, "Name:" %> <br>
  <%= f.text_field :name, :class => "form-control" %> <br>
</div>

<div class="form-group">
    <%= f.label :description, "What is the game about:" %> <br>
    <%= f.text_area :description, :class => "form-control" %> <br>
</div>

<div class="input-group">
  <span class="input-group-addon">
    <%= f.collection_check_boxes(:platform_ids, Platform.all, :id, :name, :class => "form-control") %>
  </span>
</div>

<div class="form-group">
  <%= f.label :category_id, "Category :" %>
  <%= f.collection_select :category_id, Category.all, :id, :name, { :prompt => true }, :class => "form-control" %><br>
</div>

<div class="form-group">
  <%= f.label :release_day, "What date is the game released:" %> <br>
  <%= f.date_select :release_day, :class => "form-control" %><br>
</div>

<div class="form-group">
  <%= f.label :last_play_time, "Last time played:" %> <br>
  <%= f.datetime_select :last_play_time, :class => "form-control" %><br>
</div>

<%= f.submit :class => "btn btn-warning btn-lg" %>

<% end %>