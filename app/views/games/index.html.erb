<h1>Game collection</h1>

<%= render :partial => "form" %>

<br>
<br>
<br>

<table class="table table-striped">

  <% @games.each do |game| %>
    <tr>
      <td style="font-size:20px; color: #999"><%= game.name %></td>
      <td><%= link_to "GameInfo", game_path(game), :class => "btn btn-default m-r-2" %>
          <%= link_to "Edit", games_path(:game_id => game), :class => "btn btn-warning btn-md" %>
      </td>
      <td><%= link_to "Delete", game_path(game), :method => :delete, :class => "btn btn-danger" %>
      </td>
    </tr>


  <% end %>
</table>

